<Page x:Class="AutoRepairService.Pages.EditRequestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoRepairService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditRequestPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Назад" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Редактирование заявки" FontSize="24" Margin="10"/>
            <TextBlock Text="ID заявки" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="RequestIDTextBox" IsReadOnly="True" Margin="10"/>
            <TextBlock Text="Модель автомобиля" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="CarModelTextBox" Margin="10"/>
            <TextBlock Text="Имя клиента" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="ClientNameTextBox" Margin="10"/>
            <TextBlock Text="Описание проблемы" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="DescriptionTextBox" Margin="10"/>
            <Button Content="Сохранить изменения" Click="SaveChangesButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
