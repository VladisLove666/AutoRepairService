<Page x:Class="AutoRepairService.Pages.EditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoRepairService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditClientPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Назад" Click="BackButton_Click" Margin="10"/>
            <TextBlock Text="Редактирование клиента" FontSize="24" Margin="10"/>
            <TextBlock Text="ID клиента" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="ClientIDTextBox" IsReadOnly="True" Margin="10"/>
            <TextBlock Text="Имя клиента" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="FullNameTextBox" Margin="10"/>
            <TextBlock Text="Телефон" FontSize="16" Margin="10"/>
            <TextBox Height="30" Name="PhoneNumberTextBox" Margin="10"/>
            <Button Content="Сохранить изменения" Click="SaveChangesButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
