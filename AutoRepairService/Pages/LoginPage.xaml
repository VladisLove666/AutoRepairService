<Page x:Class="AutoRepairService.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoRepairService.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Width="200" Height="25">Имя пользователя</TextBlock>
            <TextBox Name="UsernameTextBox" Width="200" Height="25" Margin="10" />
            <TextBlock Width="200" Height="25">Пароль</TextBlock>
            <PasswordBox Name="PasswordBox" Width="200" Height="25" Margin="10,10,10,0" />
            <Button Name="LoginButton" Width="100" Height="30" Margin="10,80,10,0" Content="Войти" Click="LoginButton_Click"/>
            <TextBlock>имя админа: admin пароль: admin123</TextBlock>
            <TextBlock>имя клиента: client1 пароль: client123</TextBlock>
        </StackPanel>
    </Grid>
</Page>
